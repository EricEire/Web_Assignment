@model IEnumerable<WebAssignment.Models.Product>
@{
    ViewBag.Title = "Tops";
}
<head>
    <meta charset="utf-8">
    <title>Mens Apparel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Mens Apparel. Ties, hats, belts ">

    <!-- bootstrap -->
    <link href="~/shopper/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/shopper/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="themes/css/bootstrappage.css" rel="stylesheet" />

    <!-- global styles -->
    <link href="~/shopper/themes/css/flexslider.css" rel="stylesheet" />
    <link href="~/shopper/themes/css/main.css" rel="stylesheet" />

    <!-- scripts -->
    <script src="~/shopper/themes/js/jquery-1.7.2.min.js"></script>
    <script src="~/shopper/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/shopper/themes/js/superfish.js"></script>
    <script src="~/shopper/themes/js/jquery.scrolltotop.js"></script>

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->
    <!--SEO-->
    <title>Lake Peninsula - Tops</title>
    <meta name="description" content="Lake Peninsula, mens fashion and apparal web store. Tops category ">
    <meta name="keywords" content="Lake Peninsula,menswear,fashion,mens,clothes,eCommerce,Tops, casual wear, casual, comfort, style, stylish">


</head>
<div id="top-bar" class="container">
    <section class="main-content">
        <div class="row">
            <div class="span12">
                <div class="row">
                    <div class="span12">
                        <h4 class="title">
                            <span class="pull-left"><span class="text"><span class="line">Mens Tops</span></span></span>
                          </h4>
                                <div class="active item">
                                    <ul class="thumbnails">
                                        @*Foreach loop to iterate through list passed by controller to view and display the first 12 SaleItem Objects passed*@
                                        @foreach (var saleitem in Model)
                                        {
                                            using (Html.BeginForm("AddProduct", "Cart", FormMethod.Post))
                                            {
                                            <li class="span3">
                                                <div class="product-box">
                                                    <span class="sale_tag"></span>
                                                    <p><a href="product_detail.html"><img src="data:image;base64,@System.Convert.ToBase64String(saleitem.ProductImage)" /></a></p>
                                                    <a href="product_detail.html" class="title">@saleitem.ProductName</a><br />
                                                    <a href="products.html" class="category">@saleitem.ProductDescription</a>
                                                    <p class="price">@saleitem.ProductPricePerUnit</p>
                                                    <span class="newline">
                                                        Quantity: @Html.DropDownList("quantity", new SelectList((List<int>)ViewBag.Quantity))
                                                    </span>
                                                    <p>
                                                        <input type="text" name="ProductId" value="@saleitem.ProductId" class="hideCode" />
                                                        <input type="submit" value="Add to cart" /> <!--Use this Here to send the info to Add to cart-->
                                                    </p>
                                                </div>
                                            </li>
                                            }
                                        }
                                    </ul>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div> <!--End container-->
<script src="~/shopper/themes/js/common.js"></script>
<script src="~/shopper/themes/js/jquery.flexslider-min.js"></script>
<script type="text/javascript">
      //The following JavaScript is from the Bootstrap template, modified to fit our purpose
    $(function () {
        $(document).ready(function () {
            $('.flexslider').flexslider({
                animation: "fade",
                slideshowSpeed: 4000,
                animationSpeed: 600,
                controlNav: false,
                directionNav: true,
                controlsContainer: ".flex-container" // the container that holds the flexslider
            });
        });
    });
</script>




