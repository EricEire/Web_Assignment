@model WebAssignment.Models.CustomerLogin
@{
    ViewBag.Title = "Register";
}

<head>
    <meta charset="utf-8">
    <title>Mens Apparel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Mens Apparel. Ties, hats, belts ">

    <!-- bootstrap -->
    <link href="~/shopper/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/shopper/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="themes/css/bootstrappage.css" rel="stylesheet" />

    <!-- global styles -->
    <link href="~/shopper/themes/css/flexslider.css" rel="stylesheet" />
    <link href="~/shopper/themes/css/main.css" rel="stylesheet" />

    <!-- scripts -->
    <
    <script src="~/shopper/themes/js/jquery-1.7.2.min.js"></script>
    <script src="~/shopper/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/shopper/themes/js/superfish.js"></script>
    <script src="~/shopper/themes/js/jquery.scrolltotop.js"></script>

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<div id="top-bar" class="container">
    <section class="header_text sub">
        <h4><span>Register</span></h4>
    </section>

    <section class="main-content">
        <div class="row">
            <div class="span7">
                @ViewData["message"]
                <h4 class="title"><span class="text"><strong>Register</strong> Form</span></h4>
                @using (Html.BeginForm("Register", "Customer", FormMethod.Post))
                {
                    @Html.ValidationSummary()
                <fieldset>
                    <div class="control-group">
                        <label class="control-label">@Html.LabelFor(u => u.Username)</label>
                        <div class="controls">
                            @Html.TextBoxFor(u => u.Username)
                        </div>
                    </div>
                    @Html.LabelFor(u => u.FirstName)
                    @Html.TextBoxFor(u => u.FirstName)

                    @Html.LabelFor(u => u.LastName)
                    @Html.TextBoxFor(u => u.LastName)

                    @Html.LabelFor(u => u.Email)
                    @Html.TextBoxFor(u => u.Email)

                    @Html.LabelFor(u => u.Password)
                    @Html.PasswordFor(u => u.Password)

                    @Html.LabelFor(u => u.ConfirmPassword)
                    @Html.PasswordFor(u => u.ConfirmPassword)
                   
                    <hr>
                    <div class="actions"><input tabindex="9" class="btn btn-inverse large" type="submit" value="Register"></div>
                </fieldset>
                  
                }
            </div>
        </div>
    </section>
</div>
