@model WebAssignment.Models.ContactModel
@{
    ViewBag.Title = "Index";
}

<h2>Contact Us</h2>
<h3 align="center">Like to get in touch with us?</h3> 
<h3 align="center">Please fill out the form below and we will get back to you as soon as possible</h3>
<div align="center">
    @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "login-form" }))
    {
        <p>
            @Html.ValidationSummary(false, " ")
        </p>
        <p>
            <span>@Html.LabelFor(c => c.Name)</span>
            @Html.TextBoxFor(c => c.Name)
        </p>
        <p>
            <span>@Html.LabelFor(c => c.Subject)</span>
            @Html.TextBoxFor(c => c.Subject)
        </p>
        <p>
            <span>@Html.LabelFor(c => c.Email)</span>
            @Html.TextBoxFor(c => c.Email)
        </p>
        <p>
            <span>@Html.LabelFor(c => c.Comments)</span>
            @Html.TextAreaFor(c => c.Comments, new { @rows = 4, @cols = 50 })
        </p>
        <p>
            <input type="submit" value="Submit" />
        </p>
    }
</div>
